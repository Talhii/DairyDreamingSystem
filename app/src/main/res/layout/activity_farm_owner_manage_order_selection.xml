<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selection"
    tools:context=".Farm_owner_manage_order_selection"
    android:orientation="vertical">

    <Button
        android:id="@+id/animal_orders_activity_btn"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="210dp"
        android:background="#FB9600"
        android:text="Animal Orders"
        />


    <Button
        android:id="@+id/milk_orders_activity_btn"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="#FB9600"
        android:text="Milk Orders"/>

</LinearLayout>