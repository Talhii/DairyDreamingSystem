<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".Upload_animal_buffalo">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Buffalo Data"
        android:textColor="#FFFFFF"
        android:textSize="40dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/animal_buffalo_age_et"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:hint="Age (in months)"
        android:textSize="20dp"
        android:inputType="number"
        android:layout_marginTop="60dp"
        android:background="@drawable/button_round"/>

    <EditText
        android:id="@+id/animal_buffalo_price_et"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:hint="Price"
        android:inputType="number"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_round"/>


    <ImageButton
        android:id="@+id/animal_buffalo_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        />


    <Button
        android:id="@+id/upload_animal_buffalo_data_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:text="Upload Data"
        android:background="@drawable/button_round4"
        />
</LinearLayout>